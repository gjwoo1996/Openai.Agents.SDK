{
  // Basic
  "name": "Personal Agents SDK Dev Container",
  "dockerComposeFile": "docker-compose.dev.yml",
  "service": "workspace",
  "workspaceFolder": "/home/vscode/${localWorkspaceFolderBasename}",

  // Featuring - 프론트엔드 + 백엔드 통합
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers-contrib/features/projen:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    }
  },

  // 포트 포워딩 - 프론트엔드(5173) + 백엔드(8080)
  "forwardPorts": [8080],

    // SSH 설정 마운트 (WSL2의 SSH 키와 config 사용)
    // "mounts": [
    //   "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
    // ],

  // Custom - 확장 프로그램 통합
  "customizations": {
    "vscode": {
      "extensions": [
        // 공통
        "github.vscode-github-actions",
        "PKief.material-icon-theme",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "wayou.vscode-todo-highlight",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "ms-vscode.vscode-typescript-next",
        // 백엔드 전용
        "firsttris.vscode-jest-runner",
        "ashinzekene.nestjs"
      ]
    }
  },

  // LifeCycles
  "initializeCommand": "bash ./.devcontainer/commands/initializeCommand.sh ${localWorkspaceFolder} ${containerWorkspaceFolder} ${localWorkspaceFolderBasename} ${containerWorkspaceFolderBasename}",
  "postCreateCommand": "bash ./.devcontainer/commands/postCommand.sh"
}
